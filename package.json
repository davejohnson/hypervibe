{
  "name": "hypervibe",
  "version": "0.1.0",
  "description": "MCP server for chat-driven infrastructure management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hypervibe": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "autofix": "node dist/agent/index.js",
    "prepublish-check": "bash scripts/prepublish-check.sh",
    "prepublishOnly": "npm run prepublish-check && npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "graphql": "^16.9.0",
    "graphql-request": "^7.0.0",
    "pg": "^8.17.2",
    "sodium-native": "^4.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist/",
    "data/.gitkeep"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
